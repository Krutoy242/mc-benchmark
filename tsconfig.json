{
  "compilerOptions": {
    "target": "esnext",

    "lib": ["esnext"],
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["node"],
    "strict": true,

    /* Experimental Options */
    "noImplicitOverride": true,
    "noImplicitReturns": true,

    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
